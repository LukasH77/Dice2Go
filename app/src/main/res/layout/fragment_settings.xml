<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.dice.settings.SettingsViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sAnimation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?colorPrimary"
                android:padding="20dp"
                android:text="Animation"
                app:layout_constraintBottom_toTopOf="@+id/sSound"
                app:layout_constraintEnd_toEndOf="@+id/sDarkMode"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/sDarkMode"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sSound"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:background="?colorPrimary"
                android:padding="20dp"
                android:text="Sound"
                app:layout_constraintBottom_toTopOf="@+id/sVibration"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sAnimation" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sVibration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:background="?colorPrimary"
                android:padding="20dp"
                android:text="Vibration"
                app:layout_constraintBottom_toTopOf="@+id/sDarkMode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sSound" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sDarkMode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:background="?colorPrimary"
                android:padding="20dp"
                android:text="Dark Mode"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sVibration" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>